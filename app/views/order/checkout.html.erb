<h2>Place an order</h2>
<main> 
  <div class="row g-5">

    <div class="col-md-5 col-lg-4 order-md-last">
      <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span>Your cart</span>
      </h4>
      <ul class="list-group mb-3">
      <% @products.each do |product| %>
          <li class="list-group-item d-flex justify-content-between lh-sm">
            <div>
              <h6 class="my-0"><%= product.name%></h6>
              
              <small class="text-body-secondary"><%= product.description %></small>
            </div>
            <div>
              <span class=""><%= @cart.count(product.id.to_s) %>x</span>
              <span class="text-body-secondary"><%= product.price %>$</span>
            </div>
          </li>
      <% end %>
      <li class="list-group-item d-flex justify-content-between">
        <span>Total (USD)</span> <strong><%= @sum %>$</strong>
      </li>
      </ul>
    </div>

    <div class="col-md-7 col-lg-8">
      <%= form_with class:"needs-validation" do |form| %>
        <div class="row g-3">
          <div class="col-sm-6">
            <%= form.label :name, class:"form-label" %>
            <%= form.text_field :name, class:"form-control" %>
            <div class="invalid-feedback">
              Valid first name is required.
            </div>
          </div>

          <div class="col-sm-6">
            <%= form.label :Last_Name, class:"form-label" %>
            <%= form.text_field :last_name, class:"form-control" %>
            <div class="invalid-feedback">
              Valid last name is required.
            </div>
          </div>

          <div class="col-12">
            <%= form.label :Email, class:"form-label" %>
            <%= form.text_field :email, placeholder:"you@example.com", autocomplete: "email", class:"form-control" %>
            <div class="invalid-feedback">
              Please enter a valid email address for shipping updates.
            </div>
          </div>

          <div class="col-12">
            <%= form.label :Address, class:"form-label" %>
            <%= form.text_field :address, class:"form-control" %>
            <div class="invalid-feedback">
              Please enter your shipping address.
            </div>
          </div>

          <div class="col-12">
            <%= form.label :Zip, class:"form-label" %>
            <%= form.text_field :zip, class:"form-control" %>
            <div class="invalid-feedback">
              Zip code required.
            </div>
          </div>

          <div class="col-md-5">
            <%= form.label :Country, for:"country", class:"form-label" %>
            <%= form.country_select :country_code %>
            <div class="invalid-feedback">
              Please select a valid country.
            </div>
          </div> 
        </div>

        <!--<hr class="my-4">

        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="same-address">
          <label class="form-check-label" for="same-address">Shipping address is the same as my billing address</label>
        </div>

        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="save-info">
          <label class="form-check-label" for="save-info">Save this information for next time</label>
        </div>-->

        <hr class="my-4">


        <%= form.submit "Create an order", class:"w-100 btn btn-primary btn-lg" %>
      <% end %>
    </div>
  </div>
</main>