<main>
  <div class="py-5 text-center">
    <h2>Thank you for your order</h2>
    
  </div>
  <%=@product%>
  <div class="row g-5">
    <div class="bg-body-tertiary col-md-5 col-lg-4 order-md-last" style="border-radius:20px;background:#6d757d;">
      <div class="mt-3 list-group mb-3">
        <div>
          <p class="my-0">Your adress:</p>
          <small class="text-body-secondary"><%=@order.country%> <%=@order.address%></small>
        </div>
        <hr>
        <div>
          <p class="my-0">Recipient:</p>
          <small class="text-body-secondary"><%=@order.name%> <%=@order.last_name%></small>
        </div>
        <hr>
        <div class="d-flex justify-content-between">
          <p class="my-0">To pay:</p>
          <small class="text-body-secondary"><%=@order.sum_price%>$</small>
        </div>
      </div>
    </div>

    <div class="col-md-7 col-lg-8">
      <h4 class="mb-3">Your order â„–<%=@order.id%></h4>
      
      <div class="col-12 d-flex justify-content-between">
      <div class="col-2">
        <% @products.each do |product| %>
          <p >
            <%= product.name %> <!--<%= product.price - product.discount %>-->
          </p>
        <% end %>
        </div>
        <div class="col-8 d-flex justify-content-end">
        <% @order_products.each do |order_product| %>
          <p class="col-2">
          <%= order_product.product.name %>
            <small class="text-body-secondary"><%= order_product.product_count %>x</small> <%= order_product.product_price %>$
          </p>
        <% end %>
        <div>
      </div>
    </div>
  </div>
</main>