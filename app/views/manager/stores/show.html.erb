<div class="row g-5">

  <div class="bg-body-tertiary col-md-5 col-lg-4 order-md-last" style="border-radius:20px;background:#6d757d;">
    
    <div class="mt-3 list-group mb-3">
      <%= link_to "Edit store", "#", class:"btn btn-outline-primary" %>
      <hr>
      <%= link_to "Create a new product", "#", class:"btn btn-outline-primary" %>
    </div>

  </div>
  
    <div class="col-md-7 col-lg-8">
      <h2><%= @store.name%> products</h2>

      <div class="col-12 d-flex flex-column">
        <div class="col-11 d-flex justify-content-between">
          <p class="col-2">
            Name
          </p>
          <p class="col-1">
            Price
          </p>
          <p class="col-1">
            Discount
          </p>
          <p class="col-1"></p>
          <p class="col-1"></p>
        </div>

        <% @store.products.each do |product|%>
          <div class="col-11 d-flex justify-content-between bg-body-tertiary">
            <p class="col-2 px-2">
              <%=product.name%>
            </p>
            <p class="col-1">
              <%=product.price%>
            </p>
            <p class="col-1">
              <%=product.discount%>
            </p>
            <p class="col-1 px-2">
              <%= link_to "Edit", edit_store_product_path(product.store_id, product.id) %>
            </p>
            <p class="col-1 px-2">
              <%= link_to "Delete", store_product_path(product.store_id, product.id), data:{turbo_method: :delete, turbbo_confirm: "Are you surw?"} %>
            </p>
          </div>
        <% end %>
      </div>

    </div>

</div>