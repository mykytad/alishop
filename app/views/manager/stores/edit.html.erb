<div class="row g-5">

    <div class="bg-body-tertiary col-md-5 col-lg-4 order-md-last" style="border-radius:20px;">
        <div class="mt-3 list-group mb-3">
            <%= link_to "Show orders", manager_store_orders_path(@store.id), class:"btn btn-outline-primary" %>
            <hr>
            <%= link_to "Create a new product", new_manager_store_product_path(@store.id), class:"btn btn-outline-primary" %>
            <hr>
            <%= link_to "Statistics", statistic_manager_store_orders_path(@store.id), class:"btn btn-outline-primary" %>
        </div>
    </div> 
    <div class="col-md-7 col-lg-8">
        <h2><%= @store.name%></h2>
        <div class="col-12 d-flex flex-column">
            <div class="col-11 d-flex justify-content-between">
                <div class="col-5">
                    <% if @store.errors.any? %>
                        <div id="error_explanation" data-turbo-cache="false">
                            <ul>
                                <% @store.errors.full_messages.each do |message| %>
                                    <li><%= message %></li>
                                <% end %>
                            </ul>
                        </div>
                    <% end %>
                    <%= form_with model: [ :manager, @store] do |form| %>
                        <div class="mb-3">
                            <%= form.label :name, class: "form-label" %></br>
                            <%= form.text_field :name, required: :true, class: "form-control" %>
                        </div>
                        <div class="mb-3">
                            <%= form.label :description, class: "form-label" %></br>
                            <%= form.text_area :description, required: :true, class: "form-control" %>
                        </div>
                        <div class="mb-3">
                            <%= form.label :phone, class: "form-label" %></br>
                            <%= form.text_field :phone, required: :true, class: "form-control" %>
                        </div>
                        <div>
                            <%= form.submit "Edit store", class: "btn btn-primary" %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
        
    </div>

</div>