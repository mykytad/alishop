<main>
  <div class="py-5 text-center">
    <h4 class="mb-3 h2">Order â„–<%=@order.id%></h4>
  </div>
  <div class="row g-5">
    
    <div class="bg-body-tertiary col-md-5 col-lg-4 order-md-last" style="border-radius:20px;background:#6d757d;">
      <%= render "orders/form"%>
    </div>
    
    <div class="col-md-7 col-lg-8">
      
      <div class="col-12 d-flex flex-column">
        <div class="col-11 d-flex justify-content-between">
          <p class="col-3">
            Product name
          </p>
          <p class="col-1">
            Price
          </p>
          <p class="col-2">
            Count
          </p>
          <p class="col-2">
            Status
          </p>
          <p class="col-1">
            sum
          </p>
        </div>

        <% @order_products.each do |order_product| %>
          <div class="col-11 d-flex justify-content-between bg-body-tertiary">
            <div class="text-body-secondary d-flex col-3 justify-content-between">
              <% if order_product.product %>
                <p class="col-3">
                  <%= image_tag order_product.product.image.url(:mini),alt: order_product.product.name, class: "card-img-top" if order_product.product.image? %>
                </p>
              <% else %>
                <p class="col-4">
                  <%= image_tag("no_picture_image.png") %>
                </p>
              <% end %>
              <p class="col-8"><%= order_product.product_name %></p><br>
            </div>
            <p class="col-1">
              <%= order_product.product_price %>$
            </p>
            <p class="text-body-secondary col-2">
              <%= order_product.product_count %>
            </p>
            <p class="text-body-secondary col-2">
              <%= @order.status %>
            </p>
            <p class="col-1">
              <%= order_product.product_price * order_product.product_count %>$
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>