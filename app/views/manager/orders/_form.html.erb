<div class="bg-body-tertiary col-md-5 col-lg-4 order-md-last" style="border-radius:20px;background:#6d757d;">
  <%= form_for @order do |form| %>
    <div class="d-flex justify-content-between pt-2">
      <%= form.label :status %><br>
      <%= form.select :status, ["new", "in progress", "completed"], selected: "public", class:"mx-2" %>
    </div>
    <hr>
    <%= form.submit "Save changes ", class:"w-100 btn btn-primary btn-lg mb-2" %>
  <% end %>
</div>