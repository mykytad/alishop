
<main class="form-signin text-center m-auto d-flex justify-content-center col-12"> <!--  w-100  -->
<div class="col-4"> 
<h2 class = "h3 mb-3 fw-norma">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row mb-3">
      <div class="field col-sm-8 w-100">
      <%= f.label :name, class:"col-sm-2 col-form-label" %>
        <%= f.text_field :name, class:"form-control" %>
      </div>
    </div>

    <div class="row mb-3">
    <div class = "field col-sm-8 w-100">
    <%= f.label :phone, class:"col-sm-2 col-form-label" %>
      <%= f.text_field :phone, class:"form-control" %>
    </div>
    </div>

    <div class="row mb-3">
    <div class="field col-sm-8 w-100">
    <%= f.label :email, class:"col-sm-2 col-form-label" %>
      <%= f.email_field :email, autocomplete: "email", class:"form-control" %>
    </div>
    </div>

    <div class="row mb-3">
    <div class="field col-sm-8 w-100">
      <%= f.label :password, for:"inputPassword6", class:"col-sm-2 col-form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", id:"inputPassword6", class:"form-control" %>
    </div>
    </div>

    <div class="row mb-3">
    <div class="field col-sm-8 w-100">
      <%= f.label :password_confirmation, class:"col-sm-5 col-form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
      <% if @minimum_password_length %>
        <em class = "fw-lighter">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
    </div>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class:"btn btn-primary" %>
    </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</main>
