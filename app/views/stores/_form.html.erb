<main class="m-auto d-flex col-12"> <!--  w-100  -->
    <div class="col-5">
        <h2> Store creation </h2>
        <%= form_with model: @store do |form| %>  
            <div class="row mb-3">
                <%= form.label :name, class:"form-label" %></br>
                <%= form.text_field :name, class:"form-control" %>
            </div>
            <div class="row mb-3">
                <%= form.label :description, class:"form-label" %></br>
                <%= form.text_area :description, class:"form-control" %>
            </div>
            <div class="row mb-3">
                <%= form.label :phone, class:"form-label" %></br>
                <%= form.text_field :phone, class:"form-control" %>
            </div>
            <div>
                <%= form.submit "Create store", class:"btn btn-primary" %>
            </div>
        <% end %>
    </div>
</main>