<div class="d-flex justify-content-between col-12">

  <%= render "home/categories" %>

  <div class="d-flex flex-column col-10">
    <div class="col-12">
      <div class="d-flex justify-content-between col-4"> 
        <h3 > Last products </h3>
        <small> <%= link_to "All products", products_path, class:"btn btn-outline-secondary" %> </small>
      </div>
      <div class="row g-4 mt-1">
        <% @products.each do |product|%>
          <%= render product %>
        <% end %>
      </div>
    </div>

    <hr>

    <div class="d-flex justify-content-between col-4">
      <h3> Last stores </h3>
      <small> <%= link_to "All stores", stores_path, class:"btn btn-outline-secondary" %> </small>
    </div>

    <div class="col-12">
      <div class="row g-4 mt-1">
        <% @stores.each do |store| %>
          <%= render store %>
        <% end%>
      </div>
    </div>

    <hr>

    <div class="d-flex col-4"> 
      <h3>
        Last discount products
      </h3>
    </div>

    <div class="col-12">
      <div class="row g-4 mt-1">
        <% @discount_products.each do |discount_product|%>
          <%= render discount_product %>
        <% end%>
      </div>
    </div>
  </div>
</div>