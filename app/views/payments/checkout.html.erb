<h4 class="mb-3">Payment</h4>

<%= form_tag (checkout_payments_path) do %>
  <div class="my-3">
    <div> 
      <%= radio_button_tag :payment_type, "Card" %>
      <%= label_tag :Card %>
    </div>
    <div> 
      <%= radio_button_tag :payment_type, "Cash" %>
      <%= label_tag :Cash %>
    </div>
  </div>

  <div class="row gy-3">
    <div class="col-md-6">
      <%= label_tag :name_on_card, "Name on card", class:"form-label" %>
      <%= text_field_tag "name on card", nil, class:"orm-control me-2" %>
      <small class="text-body-secondary">Full name as displayed on card</small>
    </div>

    <div class="col-md-6">
      <%= label_tag :credit_card_number, "Credit card number", class:"form-label" %>
      <%= text_field_tag "credit_card_number", nil, class:"orm-control me-2" %>
    </div>

    <div class="col-md-3">
      <%= label_tag :expiration, "Expiration", class:"form-label" %>
      <%= text_field_tag "expiration", nil, class:"orm-control me-2" %>
    </div>

    <div class="col-md-3">
      <%= label_tag :cvv, "cvv", class:"form-label" %>
      <%= text_field_tag "cvv", nil, class:"orm-control me-2" %>
    </div>
  </div>
<%end%>
